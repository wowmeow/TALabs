<Window x:Class="TALab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TALab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:VM/>
        <!-- Создаем новый VM и соединяем его со View -->
    </Window.DataContext>
    <Grid>
        <TextBlock Text="Введите выражение" Width="750" Height="25" Margin="10,15,33.6,380"/>
        <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" Name="Input" Margin="10,45,9.6,345"/>
        <TextBlock Text="{Binding Output, Mode=OneWay}" Name="Output" Margin="10,80,9.6,10"/>
    </Grid>
</Window>
